FROM alpine:3.17
LABEL maintainer="me@iskywind.com"

ENV CARGO_NET_GIT_FETCH_WITH_CLI=true

RUN { \
	apk add --update git linux-headers gcc python3-dev libffi-dev openssl-dev libxslt-dev zlib-dev libxml2-dev musl-dev nginx bash supervisor transmission-daemon python3 curl tzdata && \
	curl https://bootstrap.pypa.io/get-pip.py | python3 && \
	pip install cryptography; \
}

